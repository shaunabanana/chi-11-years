@inproceedings{10.1145/1978942.1979073,
author = {Iqbal, Shamsi T. and Grudin, Jonathan and Horvitz, Eric},
title = {Peripheral Computing during Presentations: Perspectives on Costs and Preferences},
year = {2011},
isbn = {9781450302289},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/1978942.1979073},
doi = {10.1145/1978942.1979073},
abstract = {Despite the common use of mobile computing devices to communicate and access information,
the effects of peripheral computing tasks on people's attention is not well understood.
Studies that have identified consequences of multitasking in diverse domains have
largely focused on influences on productivity. We have yet to understand perceptions
and preferences regarding the use of computing devices for potentially extraneous
tasks in settings such as presentations at seminars and colloquia. We explore costs
and attitudes about the use of computing devices by people attending presentations.
We find that audience members who use devices believe that they are missing content
being presented and are concerned about social costs. Other attendees report being
less offended by multitasking around them than the device users may realize.},
booktitle = {Proceedings of the SIGCHI Conference on Human Factors in Computing Systems},
pages = {891–894},
numpages = {4},
