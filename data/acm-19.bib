title = {Shared Substance: Developing Flexible Multi-Surface Applications},
year = {2011},
isbn = {9781450302289},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/1978942.1979446},
