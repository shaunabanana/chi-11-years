url = {https://doi.org/10.1145/1978942.1979177},
doi = {10.1145/1978942.1979177},
abstract = {Precise alignment of graphical objects and the creation of accurate layouts are crucial
activities in many applications, such as graphics design tools, presentation software
or graph editors. Surface computing is very promising for these application domains
but not fully explored yet. In this paper we contribute two tools which support layout
tasks on interactive displays: interactive grids and multi-touch alignment guides.
Both tools allow the precise positioning of graphical objects in a flexible and fluent
way by multi-touch input. Direct bimanual interaction and physical metaphors are applied
to arrange objects along straight lines and curves. A formative user evaluation showed
promising results with regard to a productive and easy use of the tools.},
booktitle = {Proceedings of the SIGCHI Conference on Human Factors in Computing Systems},
pages = {1615–1618},
numpages = {4},
keywords = {layout techniques, snap-dragging, manual diagram layout, interactive grids, multi-touch alignment guides},
