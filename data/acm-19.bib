@inproceedings{10.1145/1978942.1979186,
author = {O'Neill, Jacki and Martin, David and Colombino, Tommaso and Grasso, Antonietta},
title = {When a Little Knowledge Isn't a Dangerous Thing},
year = {2011},
isbn = {9781450302289},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/1978942.1979186},
doi = {10.1145/1978942.1979186},
abstract = {In this paper we compare two departments of a public administration body carrying
out similar work. In one department two sections, telephony and processing, are collocated
whereas in the other they are not. We demonstrate the costs of distribution, in particular
how the strictly enforced division of labour and limited visibility onto the workflow
of the other section causes problems when dealing with normal, natural exceptions.
The setting is one of seemingly routine bureaucratic work rather than high-skilled
cooperative work, thus the impact of distribution might be considered rather surprising.
We argue that a key requirement for any solution is to enable practitioners on the 'shop floor' the freedom to find elegant solutions to problems.},
booktitle = {Proceedings of the SIGCHI Conference on Human Factors in Computing Systems},
pages = {1667–1676},
numpages = {10},
keywords = {ethnography, call centres, collocation, public administration, distributed work},
