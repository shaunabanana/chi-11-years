@inproceedings{10.1145/1978942.1979233,
author = {Dragicevic, Pierre and Bezerianos, Anastasia and Javed, Waqas and Elmqvist, Niklas and Fekete, Jean-Daniel},
title = {Temporal Distortion for Animated Transitions},
year = {2011},
isbn = {9781450302289},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/1978942.1979233},
