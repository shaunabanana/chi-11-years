@inproceedings{10.1145/1978942.1979052,
author = {Yee, Nick and Ducheneaut, Nicolas and Nelson, Les and Likarish, Peter},
title = {Introverted Elves &amp; Conscientious Gnomes: The Expression of Personality in World of Warcraft},
year = {2011},
