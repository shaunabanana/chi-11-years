@inproceedings{10.1145/1978942.1979135,
author = {Dijkstra, Rob and Perez, Christopher and Vertegaal, Roel},
title = {Evaluating Effects of Structural Holds on Pointing and Dragging Performance with Flexible Displays},
year = {2011},
isbn = {9781450302289},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/1978942.1979135},
doi = {10.1145/1978942.1979135},
abstract = {In this paper, we present a study of the effects of structural holds and rigidity
of a flexible display on touch pointing and dragging performance. We discuss an observational
study in which we collected common holds used when pointing on a mockup paper display.
We also measured the force patterns each hold generated within the display surface.
We analyzed this data to produce 3 force zones in the display for each of the four
most frequently observed holds: the grip zone, rigid zone, and the flexible zone.
We report on an empirical evaluation in which we compared the efficiency of pointing
and dragging operations between holds, and between structural zones within holds,
using a real flexible Lumalive display. Results suggest that structural force distributions
in a flexible display affect the Index of Performance of both pointing and dragging
tasks, irrespective of hold, with rigid parts of the display yielding a 12% average
performance gain over flexible areas.},
booktitle = {Proceedings of the SIGCHI Conference on Human Factors in Computing Systems},
pages = {1293–1302},
numpages = {10},
keywords = {flexible displays, Fitt's Law, organic user interfaces},
location = {Vancouver, BC, Canada},
