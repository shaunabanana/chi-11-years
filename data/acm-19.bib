@inproceedings{10.1145/1978942.1979206,
author = {Fritz, Thomas and Murphy, Gail C.},
title = {Determining Relevancy: How Software Developers Determine Relevant Information in Feeds},
year = {2011},
isbn = {9781450302289},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/1978942.1979206},
doi = {10.1145/1978942.1979206},
abstract = {Finding relevant information within the vast amount of information exchanged via feeds
is difficult. Previous research into this problem has largely focused on recommending
relevant information based on topicality. By not considering individual and situational
factors these approaches fall short. Through a formative, interview-based study, we
explored how five software developers determined relevancy of items in two kinds of
project news feeds. We identified four factors that the developers used to help determine
relevancy and found that placement of items in source code and team contexts can ease
the determination of relevancy.},
booktitle = {Proceedings of the SIGCHI Conference on Human Factors in Computing Systems},
pages = {1827–1830},
numpages = {4},
keywords = {interview study, context, relevancy, news feeds},
location = {Vancouver, BC, Canada},
series = {CHI '11}
}

@inproceedings{10.1145/1978942.1979207,
author = {Zhang, Haimo and Zhao, Shengdong},
title = {Measuring Web Page Revisitation in Tabbed Browsing},
year = {2011},
isbn = {9781450302289},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/1978942.1979207},
doi = {10.1145/1978942.1979207},
abstract = {Browsing the web has been shown to be a highly recurrent activity. Aimed to optimize
the browsing experience, extensive previous research has been carried out on users'
revisitation behavior. However, the conventional definition for revisitation, which
only considers page loading activities by monitoring http requests initiated by the
browser, largely underestimates users' intended revisitation activities with tabbed
browsers. Thus, we introduce a goal-oriented definition and a refined revisitation
measurement based on page viewings in tabbed browsers. An empirical analysis of statistics
taken from a client-side log study showed that although the overall revisitation rate
remained relatively constant, tabbed browsing has introduced new behaviors warrant
future investigations.},
booktitle = {Proceedings of the SIGCHI Conference on Human Factors in Computing Systems},
pages = {1831–1834},
numpages = {4},
keywords = {tabbed browsing, effective revisitation, web revisitation},
