@inproceedings{10.1145/1978942.1979199,
author = {Durrant, Abigail and Rowland, Duncan and Kirk, David S. and Benford, Steve and Fischer, Joel E. and McAuley, Derek},
title = {Automics: Souvenir Generating Photoware for Theme Parks},
year = {2011},
isbn = {9781450302289},
publisher = {Association for Computing Machinery},
