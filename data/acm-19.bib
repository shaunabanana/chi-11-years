@inproceedings{10.1145/1978942.1979302,
author = {Sporka, Adam J. and Felzer, Torsten and Kurniawan, Sri H. and Pol\'{a}\v{c}ek, Ond\v{r}ej and Haiduk, Paul and MacKenzie, I. Scott},
