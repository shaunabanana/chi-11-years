@inproceedings{10.1145/1978942.1979253,
author = {Gabrielli, Silvia and Sabatino, Alessandra and Munoz, Jesus and Marchesoni, Michele and Mayora, Oscar},
title = {BeeParking: Feedback Interfaces for Collective Behavior Change},
year = {2011},
isbn = {9781450302289},
