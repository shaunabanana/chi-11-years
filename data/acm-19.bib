@inproceedings{10.1145/1978942.1979191,
author = {Woelfer, Jill Palzkill and Iverson, Amy and Hendry, David G. and Friedman, Batya and Gill, Brian T.},
title = {Improving the Safety of Homeless Young People with Mobile Phones: Values, Form and Function},
year = {2011},
isbn = {9781450302289},
publisher = {Association for Computing Machinery},
address = {New York, NY, USA},
url = {https://doi.org/10.1145/1978942.1979191},
doi = {10.1145/1978942.1979191},
abstract = {By their pervasiveness and by being worn on our bodies, mobile phones seem to have
become intrinsic to safety. To examine this proposition, 43 participants, from four
stakeholder groups (homeless young people, service providers, police officers, and
community members), were asked to consider how homeless young people could use mobile
phones to keep safe. Participants were asked to express their knowledge for place-based
safety and to envision how mobile phones might be used to improve safety. Detailed
